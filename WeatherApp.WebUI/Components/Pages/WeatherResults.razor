@page "/weather/{CityName}/{CityId:int}"
@using System.ComponentModel.DataAnnotations
@using WeatherApp.WebUI.DTOs
@using WeatherApp.WebUI.Services
@inject IWeatherService WeatherService

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

@if (currentWeather == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <caption class="caption-top">Current Weather</caption>
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th colspan="2" scope="col">Fahrenheit</th>
            </tr>
            <tr>
                @* TODO Consider not breaking the Law of Demeter here. *@
                <th scope="col">Current Temp</th>
                <td>@currentWeather.Current.Fahrenheit</td>
            </tr>
            <tr>
                <th scope="col">Feels Like</th>
                <td>@currentWeather.Current.FeelsLikeFahrenheit</td>
            </tr>
            <tr>
                <th colspan="2" scope="col">Celcius</th>
            </tr>
            <tr>
                <th scope="col">Current Temp</th>
                <td>@currentWeather.Current.Celcius</td>
            </tr>
            <tr>
                <th scope="col">Feels Like</th>
                <td>@currentWeather.Current.FeelsLikeCelcius</td>
            </tr>
            <tr>
                <th scope="col">Humidity</th>
                <td>@currentWeather.Current.Humidity</td>
            </tr>
            <tr>
                <th scope="col">Atmospheric Pressure (MB)</th>
                <td>@currentWeather.Current.AtmosphericPressure</td>
            </tr>
            <tr>
                <th scope="col">Wind Speed (MPH)</th>
                <td>@currentWeather.Current.WindSpeedMph</td>
            </tr>
            <tr>
                <th scope="col">UV Index:</th>
                <td>@currentWeather.Current.UVIndex</td> 
            </tr>
        </tbody>
    </table>

    <table class="table">
        <caption class="caption-top">Three Day Forecast</caption>
        <thead>
            <tr>
                <th colspan="2" scope="col"></th>
                @foreach(var forecast in forecastDays) 
                {
                    <th>@forecast.Date</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                <th colspan="5" scope="col">Fahrenheit</th>
            </tr>
            <tr>
                <th colspan="2" scope="col">Ave</th>
                @foreach(var forecast in forecastDays) 
                {
                    <td>@forecast.Day.AverageFahrenheit</td>
                }
            </tr>
            <tr>
                <th colspan="2" scope="col">Min</th>
                @foreach(var forecast in forecastDays) 
                {
                    <td>@forecast.Day.MinFahrenheit</td>
                }
            </tr>
            <tr>
                <th colspan="2" scope="col">Max</th>
                @foreach(var forecast in forecastDays) 
                {
                    <td>@forecast.Day.MaxFahrenheit</td>
                }
            </tr>
            <tr>
                <th colspan="5" scope="col">Celsius</th>
            </tr>
            <tr>
                <th colspan="2" scope="col">Ave</th>
                @foreach(var forecast in forecastDays) 
                {
                    <td>@forecast.Day.AverageCelcius</td>
                }
            </tr>
            <tr>
                <th colspan="2" scope="col">Min</th>
                @foreach(var forecast in forecastDays) 
                {
                    <td>@forecast.Day.MinCelcius</td>
                }
            </tr>
            <tr>
                <th colspan="2" scope="col">Max</th>
                @foreach(var forecast in forecastDays) 
                {
                    <td>@forecast.Day.MaxCelcius</td>
                }
            </tr>
        </tbody>
    </table>
}

@code {
    @* We use this one simply to make the URI readably for the end-user. *@
    [Parameter]
    public required string CityName {get; set;}

    @* We use this one to lookup the city from the API. *@
    [Parameter]
    public required int CityId {get; set;}

    private CurrentWeatherDTO? currentWeather;

    private IEnumerable<ForecastDayDTO> forecastDays;

    protected override async Task OnInitializedAsync()
    {
        currentWeather = await WeatherService.GetCurrentWeatherByCityId(CityId);

        // The forecast includes the current date,
        // so we pass one extra and then skip the first one.
        var forecastedWeather = await WeatherService.GetWeatherForecastByCityId(CityId, days: 4);
        forecastDays = forecastedWeather.Forecast.ForecastDay.Skip(1);
    }
}