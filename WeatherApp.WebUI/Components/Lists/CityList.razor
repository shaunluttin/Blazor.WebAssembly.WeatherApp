@using System.ComponentModel.DataAnnotations
@using WeatherApp.WebUI.DTOs

@if (Cities == null)
{
    <p><em>Please search for city by name.</em></p>
}
else
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Cities)
            {
                <tr onclick="window.location='/weather/@city.Name/@city.Id'">
                    <td>@city.Name</td>
                    <td>@city.Id</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public required WeatherLocationDTO[] Cities { get; set; }
}
