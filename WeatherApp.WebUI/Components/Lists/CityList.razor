@using System.ComponentModel.DataAnnotations
@using WeatherApp.WebUI.Models

@if (Cities == null)
{
    <p><em>Please search for city.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Cities)
            {
                <tr>
                    @* TODO On click of city name, pass the city data onto the results page. *@
                    @* https://learn.microsoft.com/en-us/aspnet/core/blazor/fundamentals/routing?view=aspnetcore-8.0 *@
                    <td>@city.Name</td>
                    <td>@city.Id</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public required City[] Cities { get; set; }
}
